{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "rootPatterns": [".ccls", "compile_commands.json", ".git/",".root/" ],
      "filetypes": ["c", "cc", "cpp", "c++"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
